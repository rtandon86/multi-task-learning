{
    "dataset_reader": {
        "type": "chunk_reader",
        "tag_label": "chunk",
        "label_encoding": "BIO",
		"chunk_label_namespace": "chunk_labels",
		"lazy": false,
		"token_indexers": {
			"tokens": {
				"type": "single_id",
				"lowercase_tokens": true
            },
            "token_characters": {
                "type": "characters"
            }
        }
    },
    "train_data_path": "./mtl_data/chunk/data/train.txt",
    "validation_data_path": "./mtl_data/chunk/data/validation.txt",
	"test_data_path": "./mtl_data/chunk/data/test.txt",
	"datasets_for_vocab_creation": ["train","validation","test"],
    "model": {
        "type": "chunk_simple_tagger",		
		"text_field_embedder": {
			"token_embedders": {
				"tokens": {
                    "type": "embedding",
                    "pretrained_file": "./mtl_data/glove/glove.6B.100d.txt.gz",
                    "embedding_dim": 100,
                    "trainable": true
				},
				"token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 16
                    },
                    "encoder": {
                        "type": "cnn",
                        "embedding_dim": 16,
                        "num_filters": 64,
                        "ngram_filter_sizes": [3]
                    },
                    "dropout": 0.2
                }
			}
		},
		"encoder": {
			"type": "lstm",
			"bidirectional": true,
			"input_size": 164,
			"hidden_size": 100,
			"num_layers": 2,
			"dropout": 0.2
        },
        "label_namespace": "chunk_labels",
        "label_encoding": "BIO",
        "calculate_span_f1": true
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens","num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        },
        "patience": 10,
        "num_epochs": 40,
        "cuda_device": -1
    }
}