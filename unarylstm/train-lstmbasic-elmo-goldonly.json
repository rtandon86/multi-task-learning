{
  "dataset_reader": {
    "type": "swag",
    "token_indexers": {
      "elmo": {
        "type": "elmo_characters"
      }
    },
    "use_only_gold_examples": true,
    "only_end": false
  },
  "train_data_path": "./data/swag/swag_train.csv",
  "validation_data_path": "./data/swag/swag_val.csv",
  "test_data_path": "./data/swag/swag_test.csv",
  "evaluate_on_test": true,
  "model": {
    "type": "lstm_swag",
    "text_field_embedder": {
      "elmo":{
        "type": "elmo_token_embedder",
        "options_file": "./data/elmo/elmo_2x4096_512_2048cnn_2xhighway_options.json",
        "weight_file": "./data/elmo/2x4096_512_2048cnn_2xhighway_weights.hdf5",
        "do_layer_norm": false,
        "dropout": 0.2
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 1024,
      "hidden_size": 300,
      "num_layers": 2,
      "bidirectional": true
    }
   },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["hypothesis1", "num_tokens"]],
    "batch_size": 32
  },
  "trainer": {
    "optimizer": {
        "type": "adam",
        "lr": 0.001
    },
    "validation_metric": "+accuracy",
    "num_serialized_models_to_keep": 2,
    "num_epochs": 75,
    "grad_norm": 1.0,
    "patience": 5,
    "cuda_device": -1,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 0
    }
  }
}
